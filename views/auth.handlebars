<div id="auth">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
            <div class="form-group">
                <label for="example-text">Email</label>
                <input type="email" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="pwInput1">Password</label>
                <input type="password" id="pwInput1" class="form-control" aria-describedby="example-text" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="pwInput2">Re-Enter Password</label>
                <input type="password" id="pwInput2" class="form-control" aria-describedby="example-text" placeholder="Re-Enter Password">
            </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

